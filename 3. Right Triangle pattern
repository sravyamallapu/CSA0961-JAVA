import java.util.*;
class LCMGCD{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        int i,j,k,n;
        System.out.println("Enter noof rows: ");
        n=sc.nextInt();
        for(i=1;i<=n;i++){
            for(j=1;j<=i;j++){
                System.out.print("* ");
            }
            System.out.println();
    }
}
}

Enter noof rows: 
5
